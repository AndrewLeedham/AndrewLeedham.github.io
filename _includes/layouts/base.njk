<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{% if renderData.title or title %}{{ renderData.title or title }} | {% endif %} {{ metadata.title }}</title>
		<link rel="stylesheet" href="{{ '/css/index.css' | url }}">
		<link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
		<link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
	</head>
	<body>
		<header class="inverted">
      <div class="wrapper">
        <h1 class="home"><a href="{{ '/' | url }}">{% include "components/al_logo-small-white.njk" %}</a></h1>
        <ul class="nav">
          {%- for nav in collections.nav -%}
          <li class="nav-item{% if nav.url == page.url %} nav-item-active{% endif %}"><a href="{{ nav.url | url }}">{{ nav.data.navtitle }}</a></li>
          {%- endfor -%}
        </ul>
      </div>
		</header>

		<main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
			{{ content | safe }}
		</main>

		<footer></footer>

		<!-- Current page: {{ page.url | url }} -->
	</body>
</html>
