---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"time"> {
  date: Date;
}

const { date, class: className, ...props } = Astro.props;
---

<time
  class:list={["text-text-subtle italic w-fit", className]}
  datetime={date.toISOString()}
  {...props}
>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
