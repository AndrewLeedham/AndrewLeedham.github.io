---
import {
  SiGithub,
  SiLinkedin,
  SiStackoverflow,
  SiX,
} from "@icons-pack/react-simple-icons";

const today = new Date();
---

<footer>
  &copy; {today.getFullYear()} Andrew Leedham. All rights reserved.
  <ul class="social-links">
    <li>
      <a
        aria-label="Andrew Leedham's X"
        href="https://twitter.com/AndrewJLeedham"
      >
        <SiX size={24} color="currentColor" />
      </a>
    </li>
    <li>
      <a
        aria-label="Andrew Leedham's LinkedIn"
        href="https://www.linkedin.com/in/andrew-leedham-ba864b112/"
      >
        <SiLinkedin size={24} color="currentColor" />
      </a>
    </li>
    <li>
      <a
        aria-label="Andrew Leedham's GitHub"
        href="https://github.com/AndrewLeedham"
      >
        <SiGithub size={24} color="currentColor" />
      </a>
    </li>
    <li>
      <a
        aria-label="stack-Andrew Leedham's Stack Overflow"
        href="http://stackoverflow.com/users/2386508/andrew-leedham"
      >
        <SiStackoverflow size={24} color="currentColor" />
      </a>
    </li>
  </ul>
</footer>
<style>
  footer {
    padding: 2em 1em 2em 1em;
    background: linear-gradient(var(--gray-gradient)) no-repeat;
    color: rgb(var(--gray));
    text-align: center;
  }
  .social-links {
    display: flex;
    justify-content: center;
    gap: 1em;
    margin: 0;
    padding: 0;
    margin-top: 1rem;
  }
  .social-links li {
    display: inline-block;
  }
  .social-links a {
    text-decoration: none;
    color: rgb(var(--gray));
  }
  .social-links a:hover {
    color: rgb(var(--gray-dark));
  }
</style>
